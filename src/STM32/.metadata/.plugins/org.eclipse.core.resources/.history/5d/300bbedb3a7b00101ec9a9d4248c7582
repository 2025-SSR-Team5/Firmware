void do_instruction(){
	uint8_t instruction;

	if(HAL_I2C_Slave_Receive(&hi2c1,instruction, 1, HAL_MAX_DELAY) == HAL_OK){
		switch (instruction){
		case 0x00 :

			break;
		case 0x01 :
			//ここにステッピングモーターの制御を記述
			break;
		}

	}

}
